            <templateFile>/ssh/hibernate.hdm.ftl</templateFile>
            <targetPath>${targetProject}\domain\</targetPath>
            <targetFileName>${table.className?substring(1)}.hbm.xml</targetFileName>
            <encoding>UTF-8</encoding>
        </template>
    </templates>
